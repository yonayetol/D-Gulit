{
    "name": "decentralized-marketplace",
    "version": "1.0.0",
    "description": "A decentralized marketplace DApp on Ethereum for buying and selling digital items",
    "main": "index.js",
    "scripts": {
        "compile": "hardhat compile",
        "test": "hardhat test",
        "deploy": "hardhat run scripts/deploy.js",
        "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
        "start": "cd frontend && npm start",
        "build": "cd frontend && npm run build",
        "install:frontend": "cd frontend && npm install",
        "install:all": "npm install && npm run install:frontend"
    },
    "keywords": [
        "ethereum",
        "dapp",
        "marketplace",
        "solidity",
        "react"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@nomicfoundation/hardhat-toolbox": "^4.0.0",
        "hardhat": "^2.19.0"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^5.1.0",
        "multer": "^2.0.2"
    }
}
